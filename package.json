{
  "name": "@canopyinc/ui",
  "version": "0.1.0",
  "description": "A framework agnostic UI web-components library for building on the Canopy API",
  "main": ".build/main/index.js",
  "typings": ".build/main/index.d.ts",
  "module": ".build/module/index.js",
  "repository": "https://github.com/canopy1/canopyUI",
  "bugs": {
    "url": "https://github.com/canopy1/canopyUI/issues"
  },
  "author": "Canopy Technology Corp.",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn storybook",
    "test": "jest",
    "build": "yarn build:css && yarn build:ts && yarn build:decorator && yarn build:compare",
    "build:clear-cache": "rimraf packages/*/lib && rimraf packages/*/tsconfig.tsbuildinfo",
    "build:compare": "tsc --build projects/vrt-compare/tsconfig.json",
    "build:css": "node ./tasks/build-css.js",
    "build:decorator": "tsc --build projects/story-decorator/tsconfig.json",
    "build:tests": "tsc --build test/tsconfig.json && tsc --build test/tsconfig-node.json",
    "build:ts": "node ./tasks/build-packages.js",
    "build:watch": "node ./tasks/watch-packages.js",
    "lint": "prettier --check 'src/**/*.{ts,tsx}' && eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "prettier --write 'src/**/*.{ts,tsx}' && eslint 'src/**/*.{ts,tsx}'",
    "analyze": "wca analyze \"packages/**/*.ts\" --outFile custom-elements.json",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook",
    "new-package": "cd new-package/plop-templates && plop"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^2.4.0",
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.6.3",
    "plop": "^2.7.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "web-component-analyzer": "^1.1.6"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    ".build/main",
    ".build/module",
    "!**/*.test.*",
    "!**/*.json",
    "README.md"
  ],
  "keywords": [
    "UI",
    "Library",
    "WebComponents",
    "LitElement"
  ]
}
