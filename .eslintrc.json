{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": { "es6": true },
  "ignorePatterns": ["node_modules", ".build"],
  "plugins": ["import"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "plugin:lit-a11y/recommended"],
  "globals": {
    "console": true,
    "describe": true,
    "test": true,
    "it": true
  },
  "rules": {}
}
